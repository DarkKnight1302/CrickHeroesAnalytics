    private List<Player> players = new List<Player>();
    private bool isLoading = true;
    private bool isRefreshing = false;
    private DateTimeOffset lastUpdateTime = DateTimeOffset.MinValue;
    private Dictionary<string, double> last5BowlingStats = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadData(true);
    }

    private async Task LoadData(bool isInitialLoad = false)
    {
        if (isInitialLoad) isLoading = true;

        var allPlayers = await playerService.GetAllPlayersAsync();

        last5BowlingStats.Clear();
        foreach (var p in allPlayers)
        {
            if (p.TotalWickets > 0)
            {
                double bowlingAverage = ((double)p.RunsGiven / (double)p.TotalWickets);
                p.BowlingAverage = Math.Round(bowlingAverage, 2);
            }
            double last5Eco = playerStatService.GetEconomyFromLastNInnings(p, 5);
            last5BowlingStats[p.Id] = last5Eco;
        }

        players = allPlayers.OrderByDescending(p => p.TotalWickets)
                            .ThenBy(p => p.BowlingEconomy == 0 ? double.MaxValue : p.BowlingEconomy)
                            .ToList();
        lastUpdateTime = await jobExecutionRepository.GetLastSuccessJobTime(Constants.GlobalConstants.CustomUpdateScoreJob);

        if (isInitialLoad) isLoading = false;

        await InvokeAsync(StateHasChanged);
    }

    private async Task Refresh()
    {
        isRefreshing = true;
        await InvokeAsync(StateHasChanged);

        try
        {
            this.cricHeroesApiClient.ResetCache();
            await matchService.UpdateLatestMatchData();
            await LoadData(false);
        }
        finally
        {
            isRefreshing = false;
            await InvokeAsync(StateHasChanged);
        }
    }

    private MarkupString GetStatWithArrow(double overall, double last5, bool isHigherBetter = true)
    {
        // Container for the icon to ensure alignment. It has a fixed width.
        const string iconContainerStyle = "display: inline-block; width: 12px; text-align: center;";

        // SVG styles
        const string svgStyle = "display: inline-block; vertical-align: -0.2em;";

        // Icons
        string upArrowSvg = $@"<svg width=""12"" height=""12"" viewBox=""0 0 16 16"" fill=""none"" stroke=""#22c55e80"" stroke-width=""2"" stroke-linecap=""round"" stroke-linejoin=""round"" style=""{svgStyle}""><path d=""M4 10l4-4 4 4""/></svg>";
        string downArrowSvg = $@"<svg width=""12"" height=""12"" viewBox=""0 0 16 16"" fill=""none"" stroke=""#ef444480"" stroke-width=""2"" stroke-linecap=""round"" stroke-linejoin=""round"" style=""{svgStyle}""><path d=""M4 6l4 4 4-4""/></svg>";
        string dotSpan = $@"<span style=""color:gray; font-size: 1em; vertical-align: -0.15em;"">•</span>";

        string iconHtml;
        string overallFormatted = overall.ToString("0.00");

        if (last5 == 0)
        {
            iconHtml = ""; // No icon, the container will just be empty space
        }
        else if ((isHigherBetter && last5 > overall) || (!isHigherBetter && last5 < overall))
        {
            iconHtml = upArrowSvg;
        }
        else if ((isHigherBetter && last5 < overall) || (!isHigherBetter && last5 > overall))
        {
            iconHtml = downArrowSvg;
        }
        else
        {
            iconHtml = dotSpan;
        }

        // Construct the final markup with the icon container. This ensures the stat number that follows
        // will always be aligned, whether an icon is present or not.
        return new MarkupString($@"<span style=""{iconContainerStyle}"">{iconHtml}</span> {overallFormatted}");
    }
