@page "/grounds"
@using CricHeroesAnalytics.Repositories

@inject IGroundSlotRepository GroundSlotRepository

<div class="header-container">
    <h2>Available Cricket Grounds</h2>
</div>

@{
    var grounds = GroundSlotRepository.GetAllAvailableGroundSlots();
}
<div class="ground-list-container">
    <div class="ground-list">
        @foreach (var ground in grounds.OrderBy(x => x.DistanceInKm))
        {
            <div class="ground-item">
                <div class="ground-details">
                    <h3>@ground.ground</h3>
                    <p><i class="fas fa-map-marker-alt"></i> Distance: @ground.DistanceInKm km</p>
                    <p><i class="fas fa-calendar-alt"></i> Available Dates:</p>
                    <ul>
                        @foreach (var date in ground.AvailableDates)
                        {
                            <li>@date.ToString("dd MMM yyyy")</li>
                        }
                    </ul>
                </div>
                <div class="ground-link">
                    <a href="@ground.GroundUrl" target="_blank">View Ground</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* Header Design */
    .header-container {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 20px;
        box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
    }

        .header-container h2 {
            font-size: 2em;
            margin: 0;
        }

    /* Centering the List */
    .ground-list-container {
        display: flex;
        justify-content: center;
        padding: 20px;
    }

    .ground-list {
        width: 100%;
        max-width: 600px;
    }

    /* Card Design */
    .ground-item {
        margin-bottom: 15px;
        padding: 15px;
        background-color: #ffffff;
        border: 1px solid #ddd;
        border-radius: 10px;
        box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .ground-item:hover {
            transform: translateY(-5px);
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        }

    .ground-details {
        margin-bottom: 15px;
    }

    .ground-item h3 {
        margin-bottom: 10px;
        color: #333;
    }

    .ground-item p {
        margin: 5px 0;
        color: #666;
    }

    .ground-item ul {
        padding-left: 20px;
    }

    .ground-item i {
        margin-right: 5px;
        color: #007bff;
    }

    .ground-link {
        text-align: right;
    }

    .ground-item a {
        color: #007bff;
        text-decoration: none;
        font-weight: bold;
    }

        .ground-item a:hover {
            text-decoration: underline;
        }
</style>
